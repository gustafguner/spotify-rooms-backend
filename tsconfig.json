{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "pretty": true,
    "sourceMap": true,
    "target": "es5",
    "lib": ["esnext", "dom"],
    "outDir": "./dist",
    "baseUrl": "./lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}
