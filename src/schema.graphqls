schema {
  query: Query
  mutation: Mutation
}

type Query {
  user(query: String): User
  rooms: [Room]
}

type Mutation {
  createRoom(input: CreateRoomInput!): Boolean!
}

type User {
  id: ID!
  spotifyId: String
  displayName: String
  email: String
  country: String
}

type Room {
  id: ID!
  name: String!
  host: User!
  users: [User]
  playback: Playback
}

type Playback {
  isPlaying: Boolean
  uri: String
  name: String
}

input CreateRoomInput {
  name: String!
}
