schema {
  query: Query
  mutation: Mutation
  subscription: Subscription
}

type Query {
  user(query: String): User
  room(roomId: ID!): Room
  rooms: [Room]
  playback(roomId: ID!): Track
  queue(roomId: ID!): [Track]
  requests(roomId: ID!): [Track]
  usersInRoom(roomId: ID!): [User]
}

type Mutation {
  createRoom(input: CreateRoomInput!): Room
  updateRoom(input: UpdateRoomInput!): Boolean!
  addTrackToQueue(input: AddTrackToQueueInput!): Track!
  voteForTrackInQueue(input: VoteForTrackInQueueInput!): Boolean!
  enterRoom(roomId: ID!): Boolean!
  leaveRoom(roomId: ID!): Boolean!
}

type Subscription {
  trackAddedToQueue(roomId: ID!): QueueTrackEvent
  trackVotedOnInQueue(roomId: ID!): QueueTrackEvent
  trackRemovedFromQueue(roomId: ID!): QueueTrackEvent
  room(roomId: ID!): RoomUpdate
  playback(roomId: ID!): Track
  userEnteredRoom(roomId: ID!): User
  userLeftRoom(roomId: ID!): User
}

type QueueTrackEvent {
  track: Track!
  queueType: String!
}

type User {
  id: ID!
  spotifyId: String
  accessToken: String
  refreshToken: String
  expires: Int
  displayName: String
  email: String
  country: String
  image: String
}

type Room {
  id: ID!
  name: String!
  host: User!
  dj: User
  mode: String!
  private: Boolean!
  users: [User]
  playback: Track
  queue: [Track]
  requests: [Track]
}

type Track {
  id: String
  uri: String
  name: String
  artists: [Artist]
  images: [SpotifyImage]
  voters: [User]
  queueTimestamp: String
  playTimestamp: String
  position: Int
  duration: Int
}

type Artist {
  id: String
  name: String
}

type SpotifyImage {
  url: String
  width: Int
  height: Int
}

type RoomUpdate {
  name: String!
  mode: String!
  private: Boolean!
}

input CreateRoomInput {
  name: String!
  mode: String!
  private: Boolean!
}

input UpdateRoomInput {
  id: ID!
  name: String!
  mode: String!
  private: Boolean!
}

input AddTrackToQueueInput {
  roomId: ID!
  trackId: String!
  queueType: String!
}

input VoteForTrackInQueueInput {
  roomId: ID!
  trackId: String!
  queueType: String!
}

input PlayTrackInput {
  roomId: ID!
}
